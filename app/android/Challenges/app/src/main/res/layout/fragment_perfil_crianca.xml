<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="challenges.com.challenges.fragments.PerfilCriancaFragment">

    <!-- TODO: Update blank fragment layout -->


    <RelativeLayout
        android:id="@+id/rl_id_perfil_crianca"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foto_perfil"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="33dp"
            android:src="@drawable/user" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nome_crianca"
            android:layout_below="@+id/view"
            android:layout_marginTop="20dp"
            android:text="ESTATÍSTICAS"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/nome_crianca"
            android:layout_below="@+id/view"
            android:layout_marginTop="148dp"
            android:text="AMIGOS"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/nome_crianca"
            android:layout_width="170dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/foto_perfil"
            android:layout_marginStart="24dp"
            android:text="NOME"
            android:textColor="@color/colorPrimary"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/foto_perfil"
            android:layout_alignStart="@+id/textView6"
            android:layout_marginBottom="9dp"
            android:text="Habilidade principal" />

        <View
            android:layout_width="400dp"
            android:layout_height="2dp"
            android:layout_below="@+id/textView8"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:background="#CCCCCC"
            android:id="@+id/view" />

        <TextView
            android:id="@+id/habilidade_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView8"
            android:layout_below="@+id/textView8"
            android:text="Inteligência"
            android:textColor="@color/common_google_signin_btn_text_dark_focused" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/qnt_recompensas"
            android:layout_below="@+id/qnt_recompensas"
            android:text="Recompensas"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/qnt_amigos"
            android:layout_below="@+id/qnt_amigos"
            android:text="Amigos"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/qnt_pontos"
            android:layout_below="@+id/qnt_pontos"
            android:text="Pontos"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/qnt_desafios"
            android:layout_below="@+id/qnt_desafios"
            android:text="Desafios"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/qnt_recompensas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView19"
            android:layout_marginStart="38dp"
            android:layout_toEndOf="@+id/textView19"
            android:text="133"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/qnt_amigos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView17"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/foto_perfil"
            android:text="2.7k"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/qnt_pontos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/qnt_desafios"
            android:layout_alignBottom="@+id/qnt_desafios"
            android:layout_alignEnd="@+id/textView8"
            android:text="346"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/qnt_desafios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/textView6"
            android:layout_marginTop="15dp"
            android:text="128"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/adc_amigo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/textView20"
            android:layout_alignEnd="@+id/textView11"
            android:src="@drawable/ic_plus" />

    </RelativeLayout>
</FrameLayout>
