<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="challenges.com.challenges.activities.LoginActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:srcCompat="@drawable/challenges_logo"
        android:foregroundGravity="center_horizontal"/>

            <EditText
                android:id="@+id/editTextEmailLogin"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_below="@+id/imageView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="63dp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:ems="10"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingLeft="15dp"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/editTextSenhaLogin"
                android:layout_width="300dp"
                android:layout_height="50dp"
                android:layout_alignStart="@+id/editTextEmailLogin"
                android:layout_below="@+id/editTextEmailLogin"
                android:layout_marginTop="16dp"
                android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
                android:ems="10"
                android:hint="Senha"
                android:inputType="textPassword"
                android:paddingLeft="15dp"
                android:textColorHint="@android:color/darker_gray" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignStart="@+id/editTextSenhaLogin"
        android:layout_below="@+id/editTextSenhaLogin"
        android:layout_marginTop="37dp"
        android:background="@drawable/fundo_botao_branco"
        android:text="Entrar"
        android:textAllCaps="false"
        android:textColor="@color/branco"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/editTextSenhaLogin"
        android:layout_below="@+id/editTextSenhaLogin"
        android:onClick="esqueceuSenha"
        android:paddingRight="5dp"
        android:text="Esqueceu a senha?"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonEntrar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp"
        android:onClick="criarNovaConta"
        android:text="Criar nova conta"
        android:textColor="@color/colorPrimary"
        android:textSize="15sp" />

</RelativeLayout>
